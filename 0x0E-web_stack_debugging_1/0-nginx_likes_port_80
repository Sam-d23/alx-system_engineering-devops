#!/bin/bash
#Checks and debugs why nginx is not listening to port 80

# Step 1: Stop Nginx if it's already running
sudo systemctl stop nginx
# Step 2: Modify Nginx configuration to listen on port 80
sudo sed -i 's/listen 443 ssl default_server;/listen 80;/g' /etc/nginx/sites-available/default

# Step 3: Start Nginx
sudo systemctl start nginx
